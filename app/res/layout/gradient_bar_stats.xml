<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:orientation="vertical">
        <TextView android:id="@+id/amount_heading"
                  android:layout_width="160dp"
                  android:layout_height="wrap_content"
                  android:text="This month so far"
                  android:textSize="11sp"
                  android:gravity="center"
                  android:textColor="@color/white"
                  android:paddingTop="10dp"
                  android:fontFamily="sans-serif-thin"/>
        <TextView android:id="@+id/amount_value"
                  android:layout_width="160dp"
                  android:layout_height="wrap_content"
                  android:text="$2000"
                  android:gravity="center"
                  android:textSize="30sp"
                  android:textColor="@color/white"
                  android:fontFamily="sans-serif-regular"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:orientation="vertical">
        <TextView android:id="@+id/percent_text"
                  android:layout_width="160dp"
                  android:layout_height="match_parent"
                  android:layout_alignParentBottom="true"
                  android:text="79%"
                  android:textSize="11sp"
                  android:paddingRight="5dp"
                  android:gravity="bottom|right"
                  android:textColor="@color/fiery_red"
                  android:fontFamily="sans-serif-bold"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:orientation="vertical">
        <TextView android:id="@+id/budget_heading"
                  android:layout_width="160dp"
                  android:layout_height="wrap_content"
                  android:text="My budget"
                  android:textSize="11sp"
                  android:gravity="center"
                  android:textColor="@color/text_purple"
                  android:fontFamily="sans-serif-thin"/>
        <TextView android:id="@+id/budget_value"
                  android:layout_width="160dp"
                  android:layout_height="wrap_content"
                  android:text="$2000"
                  android:gravity="center"
                  android:textSize="20sp"
                  android:textColor="@color/text_purple"
                  android:fontFamily="sans-serif-regular"/>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_brown">

    <TextView
            android:id="@+id/dashboard_link"
            android:textSize="20sp"
            android:text="Home"
            android:textColor="@color/text_brown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/text_brown"/>

    <TextView
            android:id="@+id/this_month_summary"
            android:textSize="20sp"
            android:text="This month"
            android:textColor="@color/text_brown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/text_brown"/>


    <TextView
              android:id="@+id/transaction_history_link"
              android:textSize="20sp"
              android:text="Transaction history"
              android:textColor="@color/text_brown"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="30dp"
              android:paddingTop="30dp"
              android:paddingBottom="30dp"
            />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/text_brown"/>

    <TextView
            android:id="@+id/historic_spending_overview_link"
            android:textSize="20sp"
            android:text="Past spending behavior"
            android:textColor="@color/text_brown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/text_brown"/>

</LinearLayout>